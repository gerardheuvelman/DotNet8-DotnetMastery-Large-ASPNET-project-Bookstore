@model Product

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary">
                        Delete Product
                    </h2>
                    <hr />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Title" class="p-0">Book Title</label>
                    <input asp-for="Title" class="form-control" disabled />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Description" class="p-0">Description</label>
                    <textarea asp-for="Description" class="form-control" disabled></textarea>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="ISBN" class="p-0">ISBN number</label>
                    <input asp-for="ISBN" class="form-control" disabled />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Author" class="p-0">ISBN number</label>
                    <input asp-for="Author" class="form-control" disabled />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="ListPrice" class="p-0">ISBN number</label>
                    <input asp-for="ListPrice" class="form-control" disabled />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Price" class="p-0">ISBN number</label>
                    <input asp-for="Price" class="form-control" disabled />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Price50" class="p-0">ISBN number</label>
                    <input asp-for="Price50" class="form-control" disabled />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Price100" class="p-0">ISBN number</label>
                    <input asp-for="Price100" class="form-control" disabled />
                </div>

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">
                            Back to Product List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}